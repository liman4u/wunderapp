<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/spacing_normal"
    android:layout_marginRight="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_half"
    android:layout_marginBottom="@dimen/spacing_half"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"

        >


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HH-GO8522"
        android:layout_toLeftOf="@id/fuel"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/spacing_normal"
        />


        <TextView
            android:id="@+id/address"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="LesserstraÃŸe 170, 22049 Hamburg"
            android:layout_marginTop="@dimen/spacing_half"
            />

        <TextView
            android:id="@+id/fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:layout_alignParentRight="true"
             android:drawableLeft="@drawable/gas"
            android:drawablePadding="@dimen/spacing_half"
            android:gravity="center_vertical"
               />


        <View
            android:id="@+id/view1"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="@color/dividerColor"
            android:layout_below="@+id/address"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            />



        <LinearLayout
            android:id="@+id/ll1"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="interior"
                    android:layout_marginBottom="@dimen/spacing_half"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_size_small"
                    />


                <TextView
                    android:id="@+id/interior"
                    android:layout_below="@id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="interior"
                     android:textStyle="bold"
                    android:padding="@dimen/spacing_quarter"
                    android:layout_marginBottom="@dimen/spacing_half"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exterior"
                    android:layout_marginBottom="@dimen/spacing_half"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_size_small"
                    />


                <TextView
                    android:id="@+id/exterior"
                    android:layout_below="@id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exterior"
                    android:padding="@dimen/spacing_quarter"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_half"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </LinearLayout>


        <View
            android:id="@+id/view2"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="@color/dividerColor"
            android:layout_below="@+id/ll1"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_half"
            />


        <TextView
            android:layout_below="@id/view2"
            android:id="@+id/vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIN: 123456789"
            />


        <TextView
            android:layout_below="@id/view2"
            android:id="@+id/engine_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine type: CC"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>